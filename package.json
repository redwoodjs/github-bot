{
  "private": true,
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "1.0.2",
    "clipanion": "^3.2.0-rc.10",
    "date-fns": "^2.28.0",
    "prompts": "^2.4.2"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "root": true,
    "rules": {
      "import/order": [
        "error",
        {
          "newlines-between": "always",
          "pathGroupsExcludedImportTypes": [
            "react"
          ],
          "pathGroups": [
            {
              "pattern": "react",
              "group": "builtin",
              "position": "after"
            },
            {
              "pattern": "@redwoodjs/**",
              "group": "external",
              "position": "after"
            },
            {
              "pattern": "src/lib/test",
              "group": "parent",
              "position": "before"
            },
            {
              "pattern": "src/**",
              "group": "parent",
              "position": "before"
            }
          ],
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ]
    }
  },
  "engines": {
    "node": ">=14.17 <=16.x",
    "yarn": ">=1.15 <2"
  },
  "prisma": {
    "seed": "yarn rw exec seed"
  },
  "scripts": {
    "clean": "git clean -fdx -e .env -e *.pem"
  },
  "packageManager": "yarn@3.2.0"
}
